<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container px-5 px-sm-0">

  <div class="row">
    <div class="col-md-3">

      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class= "row">
      <a class="btn" href="<%= edit_user_path(current_user.id) %>"><i class="fa-solid fa-user-gear"></i></a>
      </div>

      <h2 class= "mt-3">New book</h2>
      <%= form_with model: @book, url: @books_path, method: :post do |f| %>
        <div class="form-group">
        <label>Title</label><br>
        <%= f.text_field :title %>
        </div>
        <div class="form-group">
        <label>Opinion</label><br>
        <%= f.text_area :body %>
        </div>
        <div class="form-group">
        <%= f.submit 'Create Book' %>
        </div>
      <% end %>



</div>
<div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= image_tag 'no_image.jpg' %></td>
        <td><%= user.name %></td>
        <td><a href="<%= user_path(user.id) %>">Show</a></td>
      </tr>
      <% end %>
  </tbody>
</table>

</div>
</div>
</div>