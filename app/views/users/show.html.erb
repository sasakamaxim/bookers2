<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container px-5 px-sm-0">

  <div class="row">
    <div class="col-md-3">


      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class= "row">
      <a class="btn" href="<%= edit_user_path(@user.id) %>"><i class="fas fa-user-cog"></i></a>
      </div>
      <h2 class= "mt-3">New book</h2>
      <%= form_with model: @book, url: @books_path, method: :post do |f| %>
        <div class="form-group">
        <label>Title</label><br>
        <%= f.text_field :title %>
        </div>
        <div class="form-group">
        <label>Opinion</label><br>
        <%= f.text_area :body %>
        </div>
        <div class="form-group">
        <%= f.submit 'Create Book' %>
        </div>
      <% end %>
</div>
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><a href="/users/<%= @user.id %>"><%= image_tag book.user.get_profile_image(100,100) %></a></td>
        <td><a class="book_<%= book.id %>" href="/books/<%= book.id %>"><%= book.title %></a></td>
        <td><%= book.body %></td>
        <td>
              <% if book.favorited_by?(current_user) %>


                <i class="fas fa-heart text-red nav-link"><%= link_to book.favorites.count, book_favorites_path(book), method: :delete %></i>


              <% else %>


                <i class="fas fa-heart text-blue nav-link"><%= link_to book.favorites.count, book_favorites_path(book), method: :post %></i>


              <% end %>
            </td>
        <td><%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>
</div>
