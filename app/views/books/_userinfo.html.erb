
      <h2>User info</h2>
      <%= image_tag 'no_image.jpg' %>
      <table class ="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class= "row">
      <a class="btn" href="<%= edit_user_path(user) %>"><i class="fa-solid fa-user-gear"></i></a>
      </div>
      <h2 class= "mt-3">New book</h2>
      <%= form_with model: book, url: books_path, method: :post do |f| %>
        <div class="form-group">
        <label>Title</label><br>
        <%= f.text_field :title %>
        </div>
        <div class="form-group">
        <label>Opinion</label><br>
        <%= f.text_area :body %>
        </div>
        <div class="form-group">
        <%= f.submit 'Create Book' %>
        </div>
      <% end %>

