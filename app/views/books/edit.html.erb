<h2>Editing Book</h2><br>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <label for="form-group">Title</label><br>
  <%= f.text_field :title, autofocus: true, id:"form-group" %><br>
  <label for="form-group">Opinion</label><br>
  <%= f.text_field :body, id:"form-group" %><br>
  <%= f.submit "Update Book" %><br>

  <%= link_to "Show", book_path(@book), class: 'link' %>
   |
  <%= link_to "Back", "/books", class: 'link' %>
<% end %>