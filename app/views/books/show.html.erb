<% if @book.errors.any? %>
  <div>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'userinfo', book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>
              <a href="<%= user_path(@user.id) %>">
                <%= image_tag @book_data.user.get_profile_image(100,100) %><br><%= @user.name %>
              </a>
            </td>
            <td>
              <a class="book_<%= @book_data.id %>" href="/books/<%= @book_data.id %>/edit">
                <%= @book_data.title %>
              </a>
            </td>
            <td><%= @book_data.body %></td>
            <td>
              <% if current_user.id == @book_data.user_id %>
                <%= link_to "Edit", edit_book_path(@book_data.id), class: "btn btn-secondary" %>
              <% end %>
            </td>
            <td>
              <% if current_user.id == @book_data.user_id %>
                <%= link_to "Destroy", book_path(@book_data.id), method: :delete, "data-confirm" => "Are you sure?", class: "btn btn-secondary" %>
              <% end %>
            </td>

            <td>
              <% if @book_data.favorited_by?(current_user) %>


                <i class="fas fa-heart text-red nav-link"><%= link_to @book_data.favorites.count, book_favorites_path(@book_data), method: :delete %></i>


              <% else %>


                <i class="fas fa-heart text-blue nav-link"><%= link_to @book_data.favorites.count, book_favorites_path(@book_data), method: :post %></i>

              <% end %>
            </td>

            <td>
              <div>
              <p>コメント件数：<%= @book_data.book_comments.count %></p>
              <% @book_data.book_comments.each do |book_comment| %>
              <p><%= image_tag book_comment.user.get_profile_image(100,100) %></p>
              <%= book_comment.user.name %>
              <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
              <% if book_comment.user == current_user %>
              <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
              <% end %>
              <% end %>
              </div>
              <div>
              <%= form_with model: [@book_data, @book_comment] do |f| %>
              <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
              <%= f.submit "送信する" %>
              <% end %>
              </div>
            </td>

          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
